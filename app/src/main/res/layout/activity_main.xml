<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/main_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:text="设置"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/colorAccent" />

    <Switch
        android:id="@+id/main_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_text1"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="5dp"
        android:padding="14dp"
        android:text="总开关" />

    <TextView
        android:id="@+id/main_button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_bg"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="5dp"
        android:padding="14dp"
        android:layout_below="@id/main_switch"
        android:textColor="@android:color/black"
        android:text="使用说明"/>

    <TextView
        android:id="@+id/main_button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_bg"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="5dp"
        android:padding="14dp"
        android:layout_below="@id/main_button1"
        android:textColor="@android:color/black"
        android:text="作者：酷安@Pois0nBread (求个好评)"/>

    <TextView
        android:id="@+id/main_button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_bg"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="5dp"
        android:padding="14dp"
        android:layout_below="@id/main_button2"
        android:textColor="@android:color/black"
        android:text="版本 V2.1 (Bata) - 点击查看源代码"/>

    <TextView
        android:id="@+id/main_button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_bg"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="5dp"
        android:padding="14dp"
        android:layout_below="@id/main_button3"
        android:textColor="@android:color/black"
        android:text="打赏一下秃头作者 _(:з」∠)_"/>

    <TextView
        android:id="@+id/main_textinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="8dp"
        android:textSize="20dp"
        android:layout_marginTop="50dp"
        android:layout_below="@id/main_button4"
        android:textColor="@android:color/holo_red_dark"
        android:visibility="invisible"
        android:text="模块未激活或未安装Xposed框架"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="5dp"
        android:padding="14dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:text="本程序遵守GNU协议，请勿用于商业用途"/>

</RelativeLayout>